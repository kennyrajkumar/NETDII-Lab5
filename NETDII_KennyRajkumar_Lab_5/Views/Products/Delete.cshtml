@model NETDII_KennyRajkumar_Lab_5.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this?</h1>
<hr />
@*Div to style the page then DT (Data table id assume) To display all the information about the product*@
<div class="shadow-sm p-3 mb-5 bg-white rounded">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productPrice)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/"+ Model.productImage)" asp-append-version="true" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="productID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="box-shadow" asp-action="Index">Back to List</a>
    </form>
</div>
