@model NETDII_KennyRajkumar_Lab_5.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

@*Div to style the page then DT (Data table id assume) To display all the information about the product*@
<div class="shadow-sm p-3 mb-5 bg-white rounded">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.productDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.productPrice)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.productPrice)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/"+ Model.productImage)" asp-append-version="true" />
        </dd>
    </dl>
</div>
<div>
    <a class="list-group-item list-group-item-action" asp-action="Edit" asp-route-id="@Model.productID">Edit</a>
    <a class="list-group-item list-group-item-action" asp-action="Delete" asp-route-id="@Model.productID">Delete</a>
    <a class="list-group-item list-group-item-action" asp-action="Index">Back to List</a>
    <a class="list-group-item list-group-item-action" asp-controller="Orders" asp-action="Create" asp-route-id="@Model.productID">Purchase @Model.productName</a>
</div>
